<%- include("partials/header"); -%>
<h1>Home</h1>
<p> <%= startingContent %> </p>


<%  posts.forEach(function(post){ %>

<h1><%=post.title%></h1>
<p>
  <%=post.content%>
  <a href="/posts/<%=post.title%>/<%=post._id%>">Read More</a>
</p>

<form class="" action="/remove" method="post">
  <button class="btn btn-outline-danger" type="submit" name="postId" value="<%=post._id%>">Remove</button>
</form>


<% }) %>


<%- include("partials/footer"); -%>
